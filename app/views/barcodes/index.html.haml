.pull-right
  =link_to "Import barcodes", [:import, :barcodes], :class => "btn btn-default"
.pull-right
  =link_to "Generate new barcodes", [:generate, :barcodes], :method => :post, :class => "btn btn-default"

%h1
  Barcodes

%table.table.table-striped
  %thead
    %tr
      %th Id
      %th Barcode
      %th Source
  %tbody
    -Barcode.order(:id).each do |barcode|
      %tr
        %td=barcode.id
        %td=barcode.code
        %td=barcode.source